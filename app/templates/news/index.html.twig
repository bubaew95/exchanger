{% extends 'base.html.twig' %}

{% block title %}{{ meta.seo_title ?? 'site.news'|trans }}{% endblock %}

{%
    set breadcrumbs = [
        {'title' : block('title')}
    ]
%}

{% block body %}

    <div class="product-shop-page blog-area  pt-50">
        <div class="container">
            <div class="row">
                {% for news in pagination %}
                    {{ include ('components/_news-item.html.twig') }}
                {% endfor %}
            </div>

            <div class="row">
                <div class="col-xl-12">
                    {{ include ('components/pagination.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
