<div class="{{ className ?? 'col-xl-4 col-lg-4 col-md-6 col-sm-6 col-12' }}">
    <div class="blog-wrapper mb-30">
        <div class="blog-img">
            <img src="{{ news.image }}" alt="{{ news.title }}">
        </div>
        <div class="blog-detalis">
            <span>Дата создания <span>:{{ news.createdAt|date('Y-m-d') }}</span></span><br>
            <a href="{{ path('app_news_details', {alias: news.alias}) }}">{{ news.title }}</a>
            <p>{{ news.description }}</p>
        </div>
    </div>
</div>